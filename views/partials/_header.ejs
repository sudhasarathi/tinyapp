<header>
  <nav class="navbar navbar-expand-md navbar-dark" style="background-color:rgb(8, 175, 58)">
    <a class="navbar-brand" href="/urls" style="font-family: 'Pacifico', cursive; font-size: 35px; padding-top: 0px;">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New short link</a>
      </div>
    </div>
    <% if (user) { %>
    <form class="form-inline" action="/logout" method="POST">
      <p>Logged in as <%= user.email %></p>
      <button type="submit" class="btn btn-primary">Logout</button>
    </form>
    <% } else { %>
      <form class="form-inline" action="/register" method="GET">
        <button type="submit" class="btn btn-outline-light" style="background-color: dimgrey;">Register</button>
      </form>
      <form class="form-inline" action="/login" method="GET">
        <button type="submit" class="btn btn-outline-light" style="background-color: dimgrey;" style="margin-right: 2em">Login</button>   
       </form>
    <% } %>
  </nav>
</header>